<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="130dp">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginLeft="@dimen/marge"
        android:layout_marginRight="@dimen/marge">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="@dimen/hauteurLogo"
            android:src="@drawable/icone_load"/>


        <TextView
            android:id="@+id/titreSportDrawerMenu"
            android:layout_width="match_parent"
            android:layout_height="@dimen/hauteurLigneMenu"
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/tailleTitreMenu"
            android:textStyle="bold"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:background="@color/colorPrimary"/>

    </LinearLayout>
</LinearLayout>